<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view type="edit" title="Office" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../../schemas/view.xsd"
	xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form pixelWidth="400" border="true" borderTitle="Office Details" invisible="notManager">
		<column pixelWidth="100" />
		<column />
		<row>
			<item>
				<textField binding="levelUnit"/>
			</item>
		</row>
		<row>
			<item>
				<textField binding="buildingName" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="streetAddress" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="suburb" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="postCode" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="phone" />
			</item>
		</row>
	</form>
	
	<form pixelWidth="400" border="true" borderTitle="Office Details" invisible="manager">
		<column pixelWidth="100" />
		<column />
		<row>
			<item>
				<blurb>
        			<![CDATA[<b>Address: &nbsp; {bizKey}</b>]]>
        		</blurb>
			</item>
		</row>
	</form>
	<actions>
		<ok invisible="notManager" />
		<save invisible="notManager" />
		<cancel />
		<delete invisible="notManager"/>
	</actions>
</view>

