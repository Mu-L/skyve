<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="Data Maintenance" type="edit" xmlns="http://www.skyve.org/xml/view" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tabPane>
		<tab title="Export/Import">
			<form border="true" percentageWidth="50">
				<column percentageWidth="20" />
				<column />
				<row>
					<item>
						<combo binding="modDocName" />
					</item>
				</row>
				<row>
					<item>
						<spacer />
					</item>
					<item>
						<button actionName="DataMaintenanceExportAction" pixelWidth="200" />
					</item>
				</row>
				<row>
					<item>
						<spacer />
					</item>
					<item>
						<button actionName="DataMaintenanceImportAction" pixelWidth="200" />
					</item>
				</row>
			</form>
		</tab>
		<tab title="Backup/Restore">
			<form border="true" borderTitle="Truncate">
				<column pixelWidth="100" />
				<column />
				<column pixelWidth="75" />
				<row>
					<item>
						<textField binding="schemaName" />
					</item>
					<item align="centre">
						<button actionName="Truncate" />
					</item>
				</row>
			</form>
			<vbox border="true" borderTitle="Backups">
				<listGrid model="BackupsModel"
							selectedIdBinding="selectedBackupTimestampFolderName"
							continueConversation="false" 
							showAdd="false" 
							showEdit="false" 
							showExport="false"
							showFilter="false" 
							showRemove="false"
							showSnap="false" 
							showSummary="false" 
							showTag="false" 
							showZoom="false"
							postRefresh="backupsRefreshRequired">
					<onSelectedHandlers>
						<server action="BackupSelected" />
					</onSelectedHandlers>
				</listGrid>
				<hbox horizontalAlignment="right" shrinkWrap="height">
					<button actionName="Backup" pixelWidth="75" />
					<button actionName="DeleteBackup" pixelWidth="75" />
					<button actionName="Restore" pixelWidth="75" />
				</hbox>
			</vbox>
		</tab>
		<tab title="Content">
			<listGrid model="ContentModel" continueConversation="false" showAdd="false" showEdit="false" showExport="false"
				showFilter="false" showRemove="false" showSnap="false" showSummary="false" showTag="false" showZoom="false">
			</listGrid>
			<!-- <form> <column/> <column/> <row> <item> <contentLink binding=""></contentLink> </item> </row> </form> -->
			<hbox horizontalAlignment="right" shrinkWrap="height">
				<button actionName="Reindex" />
			</hbox>
		</tab>
	</tabPane>
	<actions>
		<defaults />
		<export className="DataMaintenanceExportAction" displayName="Export Data" inActionPanel="false" />
		<import className="DataMaintenanceImportAction" displayName="Import Data" inActionPanel="false" />
		<action className="Backup" displayName="Backup" inActionPanel="false" />
		<action className="DeleteBackup" displayName="Delete" inActionPanel="false" disabled="notBackupSelected" confirm="Are you sure you want to delete this backup folder from the server filesystem?" />
		<action className="Reindex" displayName="Reindex" inActionPanel="false" />
		<action className="Restore" displayName="Restore" inActionPanel="false" disabled="notBackupSelected" confirm="Are you sure you want to restore the data and content contained in this backup folder from the server filesystem?" />
		<action className="BackupSelected" displayName="BackupSelected" inActionPanel="false" />
		<action className="Truncate" displayName="Truncate" inActionPanel="false" />
	</actions>
</view>
