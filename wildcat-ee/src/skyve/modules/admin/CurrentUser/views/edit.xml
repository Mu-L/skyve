<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="{currentUser.contact.name}" type="edit" xmlns="http://www.skyve.org/xml/view"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<hbox>
		<vbox percentageWidth="50" pixelMemberPadding="20">
			<form>
				<column percentageWidth="20" />
				<column />
				<row>
					<item>
						<textField binding="currentUser.userName" disabled="true" />
					</item>
				</row>
				<row>
					<item>
						<textField binding="currentUser.contact.name" />
					</item>
				</row>
				<row>
					<item>
						<textField binding="currentUser.contact.email1" />
					</item>
				</row>
				<row>
					<item>
						<textField binding="currentUser.contact.mobile" />
					</item>
				</row>
			</form>
			<hbox >
				<form percentageWidth="20">
					<column />
					<row>
						<item>
							<spacer />
						</item>
					</row>
				</form>
				<dataGrid binding="currentUser.groups" editable="false">
					<boundColumn binding="name" title="Groups"/>
				</dataGrid>
			</hbox>
			<hbox >
				<form percentageWidth="20">
					<column />
					<row>
						<item>
							<spacer />
						</item>
					</row>
				</form>
				<dataGrid binding="currentUser.roles" editable="false" >
					<boundColumn binding="roleName" title="Roles"/>
				</dataGrid>
			</hbox>
		</vbox>
		<form percentageWidth="50">
			<column percentageWidth="20" />
			<column />
			<row>
				<item>
					<spacer />
				</item>
				<item showLabel="false">
					<contentImage binding="currentUser.contact.image" pixelWidth="200" pixelHeight="200" />
				</item>
			</row>
		</form>
	</hbox>
	<actions>
		<action className="UpdateMyDetails" displayName="Save" toolTip="Save" relativeIconFileName="actions/Save.gif" />
	</actions>
</view>
