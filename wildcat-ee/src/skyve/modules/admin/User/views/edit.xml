<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="User {userName}" type="edit" xmlns="http://www.skyve.org/xml/view" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tabPane>
		<tab title="Profile">
			<vbox border="true" pixelPadding="10" pixelHeight="1" percentageWidth="50">
				<form>
					<column percentageWidth="20" />
					<column />
					<row>
						<item>
							<textField binding="userName" />
						</item>
					</row>
					<row>
						<item>
							<lookupDescription binding="contact" descriptionBinding="name" />
						</item>
					</row>
					<row>
						<item label="Data Group">
							<textField binding="dataGroup.name" disabled="true" invisible="notInDataGroup" />
						</item>
						<item>
							<combo binding="dataGroup" invisible="inDataGroup" />
						</item>
					</row>
					<row>
						<item>
							<combo binding="homeModule" />
						</item>
					</row>
				</form>
			</vbox>
		</tab>

		<tab title="Groups">
			<vbox border="true" pixelPadding="10" percentageHeight="50">
				<listMembership binding="groups" candidatesHeading="Unassigned" membersHeading="Assigned" listWidth="300" />
			</vbox>
			<vbox></vbox>
		</tab>
		<tab title="Roles">
			<vbox border="true" pixelPadding="10" percentageHeight="50">
				<dataGrid title="User Roles" binding="roles">
					<boundColumn binding="roleName" title="Role Name" />
				</dataGrid>
			</vbox>
			<vbox></vbox>
		</tab>
		<tab title="Password">
			<vbox border="true" pixelPadding="10" pixelHeight="1" percentageWidth="50">
				<form>
					<column percentageWidth="30" />
					<column />
					<row>
						<item>
							<password binding="newPassword" />
						</item>
					</row>
					<row>
						<item>
							<password binding="confirmPassword" />
						</item>
					</row>
					<row>
						<item>
							<checkBox binding="passwordExpired" invisible="notSecurityAdministrator" />
						</item>
						<item>
							<textField binding="clearTextPassword" disabled="true" invisible="notSecurityAdministrator" />
						</item>
					</row>
				</form>
			</vbox>
		</tab>
	</tabPane>
	<actions>
		<defaults />
		<action className="GenerateUniqueUserName" displayName="Generate UserName" invisible="notSecurityAdministrator" 
		relativeIconFileName="shared/icons/Job.gif"/>
		<action className="GeneratePassword" displayName="Generate Password" invisible="notSecurityAdministrator" 
		relativeIconFileName="shared/icons/Job.gif"/>
	</actions>
</view>
