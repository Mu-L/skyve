<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="template" basedir=".">
	<property name="skyve-ear-path" value="${skyve-ee-path}/javaee/skyve.ear" />
	<property name="skyve-war-path" value="${skyve-ear-path}/skyve.war" />

	<path id="classpath">
		<fileset dir="tools/lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${ear-path}/lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${war-path}/WEB-INF/lib">
			<include name="**/*.jar"/>
		</fileset>
		<!-- don't use a file element here - doesn't work in old ant -->
		<pathelement path="${ear-path}/apps.jar/" />
	</path>

	<taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask"> 
		<classpath refid="classpath"/>
	</taskdef>

	<target name="_deprecationReport" description="Report of Deprecated Attributes">
		<java fork="true" classname="modules.DeprecationReport">
			<classpath refid="classpath" />
			<arg value="src/" />
		</java>
	</target>
	
	<target name="_compileReports" description="Mass compile all reports">
		<touch> 
			<fileset dir="src/">
				<include name="**/*.jrxml"/>
			</fileset>
		</touch>
		<jrc keepjava="false" xmlvalidation="true">
			<classpath refid="classpath"/>
			<include name="**/*.jrxml"/>
			<src>
				<fileset dir="src/">
					<include name="**/*.jrxml"/>
				</fileset>
			</src>
		</jrc>
	</target>

	<target name="_generateDomain" description="Domain Class Generation">
		<java fork="true" classname="org.skyve.impl.generate.DomainGenerator">
			<classpath refid="classpath" />
			<arg value="src/skyve/" />
<!--
			<arg value="debug!" />
-->
		</java>
	</target>

	<target name="_wgetLibs" depends="clearBeforeAssemble" description="Retrieve skyve libs from skyve.org">
		<get src="http://www.skyve.org/downloads/libs.zip" dest="libs.zip" verbose="true" usetimestamp="true" />
		<unzip src="libs.zip" dest="${ear-path}/lib">
			<patternset>
				<include name="skyve-ee/javaee/skyve.ear/lib/*"/>
				<exclude name="geodb*.jar" />
			</patternset>
			<flattenmapper/>
		</unzip>
		<unzip src="libs.zip" dest="${war-path}/WEB-INF/lib">
			<patternset>
				<include name="skyve-ee/javaee/skyve.ear/skyve.war/WEB-INF/lib/*"/>
			</patternset>
			<flattenmapper/>
		</unzip>
		<unzip src="libs.zip" dest="lib">
			<patternset>
				<include name="skyve-ee/lib/*"/>
			</patternset>
			<flattenmapper/>
		</unzip>
		<unzip src="libs.zip" dest="tools/lib">
			<patternset>
				<include name="skyve-ee/tools/lib/*"/>
			</patternset>
			<flattenmapper/>
		</unzip>
	</target>
	
	<target name="clearBeforeAssemble" if="${assemble.overwrite}">
		<delete dir="${ear-path}/lib" includes="**" />
		<delete dir="${war-path}/ckeditor456" includes="**" />
		<delete dir="${war-path}/css" includes="*-min.css" />
		<delete dir="${war-path}/desktop" includes="**" />
		<delete dir="${war-path}/external" includes="**" />
		<delete dir="${war-path}/images" includes="**" />
		<delete dir="${war-path}/isomorphic110" includes="**" />
		<delete dir="${war-path}/mobile" includes="**" />
		<delete dir="${war-path}/pages" includes="**" />
		<delete dir="${war-path}/ultima" includes="**" />
		<delete dir="${war-path}/WEB-INF/lib" includes="**" />
		<delete dir="${war-path}/WEB-INF/resources/primefaces-water" includes="**" />
		<delete dir="${war-path}/WEB-INF/resources/skyve" includes="**" />
		<delete dir="${war-path}/wicket" includes="**" />
		<delete dir="${war-path}" includes="bizImport.xhtml,contentUpload.xhtml,fileUpload.xhtml,home.jsp,unsubscribe.xhtml" />
		<delete dir="${war-path}/pages" includes="**" />

		<delete dir="src/modules" includes="*.java" />
		<delete dir="src/modules/admin" includes="**" />
		<delete dir="src/resources" includes="**" />
		<delete dir="src/schemas" includes="**" />
	</target>
	
	<target name="assemble" depends="clearBeforeAssemble">
		<!-- Web App -->
		<copy todir="lib" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ee-path}/lib" includes="skyve*.jar" />
		</copy>
		<copy todir="${ear-path}/lib" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ear-path}/lib" includes="**" excludes="geodb*.jar,h2*.jar" />
		</copy>
		<copy todir="${ear-path}/META-INF" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ear-path}/META-INF" includes="**" excludes="application.xml" />
		</copy>

		<copy todir="${war-path}/ckeditor456" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/ckeditor456" includes="**" />
		</copy>
		<copy todir="${war-path}/css" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/css" includes="*-min.css" />
		</copy>
		<copy todir="${war-path}/desktop" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/desktop" includes="**.xhtml,**-min.js,diff_match_patch.js" />
		</copy>
		<copy todir="${war-path}/external" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/external" includes="**" />
		</copy>
		<copy todir="${war-path}/images" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/images" includes="**" />
		</copy>
		<copy todir="${war-path}/isomorphic110" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/isomorphic110" includes="**" />
		</copy>
		<copy todir="${war-path}/mobile" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/mobile" includes="**" />
		</copy>
		<copy todir="${war-path}/pages" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/pages" includes="**" />
		</copy>
		<copy todir="${war-path}/ultima" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/ultima" includes="**" />
		</copy>
		<copy todir="${war-path}/WEB-INF/" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/WEB-INF/" includes="faces-config.xml,jboss-classloading.xml" />
		</copy>
		<copy todir="${war-path}/WEB-INF/lib" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/WEB-INF/lib/" includes="**" />
		</copy>
		<copy todir="${war-path}/WEB-INF/resources/primefaces-water/" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/WEB-INF/resources/primefaces-water/" includes="**" />
		</copy>
		<copy todir="${war-path}/WEB-INF/resources/skyve/" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/WEB-INF/resources/skyve/" includes="**" />
		</copy>
		<copy todir="${war-path}/wicket" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}/wicket" includes="**" />
		</copy>
		<copy todir="${war-path}" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-war-path}" includes="*.xhtml,*.jsp" />
		</copy>

		<!-- App -->
		<copy todir="src/skyve/modules" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ee-path}/src/skyve/modules" includes="*.java" excludes="**/*.class" />
		</copy>
		<copy todir="src/skyve/modules/admin" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ee-path}/src/skyve/modules/admin" includes="**" excludes="**/*.class" />
		</copy>
		<copy todir="src/skyve/resources" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ee-path}/src/skyve/resources" includes="**" />
		</copy>
		<copy todir="src/skyve/schemas" overwrite="${assemble.overwrite}">
			<fileset dir="${skyve-ee-path}/src/skyve/schemas" includes="**" />
		</copy>
	</target>
	
	<target name="assembleTools">
		<!-- Assemble backup -->
		<delete failonerror="false"> <!-- prod/backup/lib may not exist yet -->
			<fileset dir="prod/backup/lib" includes="**.jar"/>
		</delete>
		<copy todir="prod/backup/lib">
			<fileset dir="${skyve-ear-path}/lib" includes="**.jar" />
			<fileset dir="${skyve-ee-path}/lib" includes="**.jar" />
			<fileset dir="${skyve-ee-path}/tools/lib" includes="skyve-tools.jar" />
		</copy>

		<!-- Assemble build template -->
		<copy todir="tools" overwrite="true">
			<fileset dir="${skyve-ee-path}/tools" includes="build-template.xml" />
		</copy>
				
		<!-- Assemble javadoc -->
		<copy todir="tools/lib" overwrite="true">
			<fileset dir="${skyve-ee-path}/tools/lib" includes="UmlGraph.jar,skyve-tools.jar" />
		</copy>
	</target>

	<target name="_touch" description="Touch the app to enable redeploy">
		<delete file="javaee/*.failed" />
		<touch file="${ear-path}.dodeploy" />
	</target>
	
	<target name="_copyProdEAR" description="Create exploded ear file in prod/">
		<delete dir="prod/${ear-name}" />
		<copy todir="prod/${ear-name}">
			<fileset dir="${ear-path}" includes="**" />
		</copy>
	</target>
	
	<target name="umlJavadoc">
        <javadoc sourcepath="src\skyve" packagenames="modules.*.domain" destdir="../javadoc" private="true" verbose="false">
			<classpath refid="classpath"/>
            <doclet name="org.skyve.impl.tools.javadoc.SkyveDoclet" path="tools/lib/UMLGraph.jar:tools/lib/skyve-tools.jar">
                    <param name="-hide" value="org.skyve.*|java.*|org.skyve.impl.*"/>

            		<param name="-nodefontsize" value="9"/>
                    <param name="-nodefontpackagesize" value="7"/>
                    <param name="-link" value="http://docs.oracle.com/javase/1.5.0/docs/guide/javadoc/doclet/spec/"/>
                    <param name="-link" value="http://docs.oracle.com/javase/8/docs/api/"/>
            </doclet>
        </javadoc>
		<delete dir="src/skyve" includes="**/package.html" />
	</target>
	
	<target name="MANIFEST.MF">
		<!-- create a property containing all .jar files, prefix lib/, and separated with a space -->
		<pathconvert property="libs.deploy" pathsep=" ">
			<mapper>
				<chainedmapper>
					<!-- remove absolute path -->
					<flattenmapper />
					<!-- add lib/ prefix -->
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
			<path>
				<fileset dir="${ear-path}/lib">
					<include name="**/*skyve-core.jar" />
					<include name="**/*skyve-ext.jar" />
				</fileset>
				<fileset dir="${ear-path}/lib">
					<include name="**/*.jar" />
					<exclude name="**/*skyve*.jar" />
				</fileset>
			</path>
		</pathconvert>
		<manifest file="${war-path}/META-INF/MANIFEST.MF">
			<!-- finally, use the magically generated libs path -->
			<attribute name="Class-Path" value="${libs.deploy}" />
		</manifest>
	</target>
	<target name="backupClasspath">
		<!-- create a property containing all .jar files, prefix lib/, and separated with a space -->
		<pathconvert property="libs.deploy" pathsep=":">
			<mapper>
				<chainedmapper>
					<!-- remove absolute path -->
					<flattenmapper />
					<!-- add lib/ prefix -->
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
			<path>
				<fileset dir="${ear-path}/lib">
					<include name="**/*skyve-core.jar" />
					<include name="**/*skyve-ext.jar" />
				</fileset>
				<file name="tools/lib/skyve-tools.jar" />
				<fileset dir="${ear-path}/lib">
					<include name="**/*.jar" />
					<exclude name="**/*skyve*.jar" />
				</fileset>
			</path>
		</pathconvert>
		<echo message="CLASSPATH=${libs.deploy}" file="prod/backup/classpath.txt"/>
	</target>
</project>