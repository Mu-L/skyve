<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view name="edit" title="Office" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../../schemas/view.xsd" xmlns="http://www.skyve.org/xml/view"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form pixelWidth="400" border="true" borderTitle="Office Details">
		<column pixelWidth="100" />
		<column />
		<row>
			<item>
				<textField binding="levelUnit" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="buildingName" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="streetAddress" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="suburb" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="postCode" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="phone" />
			</item>
		</row>
	</form>
    <vbox border="true" borderTitle="Map">
		<map modelName="OfficeMap" percentageWidth="100" percentageHeight="100" loading="eager" showRefreshControls="true"/>
    </vbox>
	<actions>
		<ok invisible="notManager" />
		<cancel />
	</actions>
</view>

