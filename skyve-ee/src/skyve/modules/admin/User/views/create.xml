<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="Create a New User" name="create" xmlns="http://www.skyve.org/xml/view" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<vbox shrinkWrap="height">
		<vbox visible="confirmContact">
			<component name="_confirmContact">
				<names>
					<name fromComponent="Check" mappedTo="Check" />
					<name fromComponent="New" mappedTo="New" />
				</names>
			</component>
		</vbox>
		<vbox visible="confirmUserNameAndPassword">
			<component name="_confirmUsernameAndPassword">
				<names>
					<name fromComponent="Back" mappedTo="Back" />
					<name fromComponent="Next" mappedTo="Next" />
				</names>
			</component>
		</vbox>
		<vbox visible="confirmGroupMemberships">
			<component name="_confirmGroupMemberships">
				<names>
					<name fromComponent="Back" mappedTo="Back" />
					<name fromComponent="Next" mappedTo="Next" />
				</names>
			</component>
		</vbox>
	</vbox>
	<actions>
		<defaults invisible="notConfirmGroupMemberships" />
		<cancel invisible="confirmGroupMemberships" />
		<action className="New" displayName="New Contact" invisible="notConfirmContact" inActionPanel="false" relativeIconFileName="actions/New.gif" />
		<action className="Check" displayName="Search" inActionPanel="false" relativeIconFileName="shared/icons/Search.gif" />
		<action className="Back" displayName="Back" clientValidation="false" relativeIconFileName="shared/icons/Back.gif" invisible="confirmContact" />
		<action className="Next" displayName="Next" clientValidation="false" relativeIconFileName="shared/icons/Next.gif" invisible="notShowNextButton" />
	</actions>
</view>
