<?xml version="1.0" encoding="UTF-8"?>
<view name="edit"
		title="Group"
		xmlns="http://www.skyve.org/xml/view"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
	<tabPane>
		<tab title="Group Details">
			<vbox responsiveWidth="12">
				<form border="true" percentageWidth="50">
					<column percentageWidth="30" />
					<column />
					<row>
						<item>
							<default binding="name" />
						</item>
					</row>
					<row>
						<item>
							<default binding="description" />
						</item>
					</row>
				</form>
				<listMembership binding="roles"/>
			</vbox>
		</tab>
		<tab title="Users in Group">
			<listGrid title="Users In Group"
						query="qUsersInGroup"
						continueConversation="false"
						showAdd="false"
						showEdit="false"
						showRemove="false"
						percentageWidth="50"
						responsiveWidth="12">
				<filterParameter name=":bizId" operator="equal" binding="bizId" />
			</listGrid>
		</tab>
	</tabPane>
	<actions>
		<defaults />
	</actions>
</view>
