	<target name="buildXmlSchemas">
		<schemagen destdir="src/skyve/schemas" includeantruntime="true" verbose="false" >
			<src path="../skyve-core/src/org/skyve/impl/metadata/repository/router" />
			<src path="../skyve-core/src/org/skyve/impl/metadata/repository/customer" />
			<src path="../skyve-core/src/org/skyve/impl/metadata/repository/module" />
			<src path="../skyve-core/src/org/skyve/impl/metadata/repository/document" />
			<src path="../skyve-tools/src/org/skyve/impl/tools/test/wail/language" />
			<src path="../skyve-core/src/org/skyve/impl/metadata/repository/view" />
			<classpath refid="classpath" />
			<schema namespace="http://www.skyve.org/xml/common" file="common.xsd" />
			<schema namespace="http://www.skyve.org/xml/router" file="router.xsd" />
			<schema namespace="http://www.skyve.org/xml/customer" file="customer.xsd" />
			<schema namespace="http://www.skyve.org/xml/module" file="module.xsd" />
			<schema namespace="http://www.skyve.org/xml/document" file="document.xsd" />
			<schema namespace="http://www.skyve.org/xml/view" file="view.xsd" />
			<schema namespace="http://www.skyve.org/xml/wail" file="wail.xsd" />
		</schemagen>
	</target>
	
	<property name="staging.dir" value="." />
	
	<target name="libsZip">
		<delete dir="." includes="libs.zip" failonerror="false" />
		<zip destfile="${staging.dir}/libs.zip"
				basedir=".."
				includes="skyve-ee/javaee/skyve.ear/lib/**,skyve-ee/javaee/skyve.ear/skyve.war/WEB-INF/lib/**,skyve-ee/lib/javaee-api-7.0.jar,skyve-ee/lib/skyve-src.jar,skyve-ee/tools/lib/com-jaspersoft-ireport.jar,skyve-ee/tools/lib/UmlGraph.jar,skyve-ee/tools/lib/skyve-tools.jar,LICENSE.txt,DEPENDENCIES.txt"
				excludes="**/.DS_Store"
				duplicate="fail" />
	</target>
	<target name="demoAssemble">
		<delete dir="${staging.dir}/demo/skyve/javaee/skyve.ear" includes="**" failonerror="false" />
		<copy todir="${staging.dir}/demo/skyve/javaee/skyve.ear" overwrite="true">
			<fileset dir="javaee/skyve.ear" includes="**" />
		</copy>
		<delete dir="${staging.dir}/demo/skyve/lib" includes="**" failonerror="false" />
		<copy todir="${staging.dir}/demo/skyve/lib" overwrite="true">
			<fileset dir="lib" includes="javaee*.jar,skyve*.jar" />
		</copy>
		<delete dir="${staging.dir}/demo/skyve/src/skyve" includes="**" failonerror="false" />
		<copy todir="${staging.dir}/demo/skyve/src/skyve" overwrite="true">
			<fileset dir="src/skyve" includes="**" />
		</copy>
		<delete dir="${staging.dir}/demo/skyve/tools" includes="**" failonerror="false" />
		<copy todir="${staging.dir}/demo/skyve/tools" overwrite="true">
			<fileset dir="tools" includes="**" />
		</copy>
		<copy todir="${staging.dir}/demo/skyve" overwrite="true">
			<fileset dir="." includes="build.xml" />
			<fileset dir=".." includes="LICENSE.txt,DEPENDENCIES.txt" />
		</copy>
		<copy file="DEMO-README.txt" tofile="${staging.dir}/demo/README.txt" overwrite="true" />
		<copy file="DEMO-logging.properties" tofile="${staging.dir}/demo/wildfly-8.1.0.Final/standalone/configuration/logging.properties" overwrite="true" />
	</target>
	<target name="demoZip">
		<delete dir="." includes="demo.zip" failonerror="false" />
		<zip destfile="${staging.dir}/demo.zip" duplicate="fail">
			<fileset dir="demo" includes="**" excludes="**/.DS_Store,**/run.sh,**/standalone.sh" />
			<zipfileset dir="demo" includes="**/run.sh,**/standalone.sh" filemode="755" />
		</zip>
	</target>
</project>
